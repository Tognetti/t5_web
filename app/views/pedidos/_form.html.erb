<%= form_with(model: pedido) do |form| %>
  <% if pedido.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(pedido.errors.count, "error") %> prohibited this pedido from being saved:</h2>

      <ul>
        <% pedido.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :data %>
    <%= form.date_select :data %>
  </div>

  <div class="field">
    <%= form.label :valor %>
    <%= form.number_field :valor, step: 0.01%>
  </div>

  <div class="field">
    <%= form.label :cliente_id %>
    <%= collection_select(:pedido, :cliente_id, Cliente.all, :id, :nome) %>
  </div>

  <div class="field">
    <%= form.label "Produtos" %>
    <% Produto.all.each do |p| %>
    <%= form.label p.nome %>
    <%= form.check_box "produtos[#{p.id}]" %>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
